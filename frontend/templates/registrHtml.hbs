<div class="marks-wrapper">
    <div class="registrationMark active">
        <span>Registration</span>
    </div>

    <div class="submitMark">
        <span>Submit</span>
    </div>
</div>


<div class="registrationSubmit">
    <div class="registration-wrapper">
        <span>Registration</span>
        <form class="registration">
            <div class="form-group">
                <label for="reg-login">Login:</label>
                <input class="registrationLogin" type="text" name="login" id="reg-login">
            </div>

            <div class="form-group">
                <label for="reg-password">Password:</label>
                <input class="registrationPassword" type="password" name="password" id="reg-password">
            </div>

            <button type="submit">Submit</button>
        </form>
    </div>

    <div class="submit-wrapper">
        <span>Submit</span>
        <form class="submit">
            <div class="form-group">
                <label for="subm-login">Login:</label>
                <input class="submitLogin" type="text" name="login" id="subm-login">
            </div>

            <div class="form-group">
                <label for="subm-password">Password:</label>
                <input class="submitPassword" type="password" name="password" id="subm-password">
            </div>

            <button type="submit">Submit</button>
        </form>
    </div>
</div>